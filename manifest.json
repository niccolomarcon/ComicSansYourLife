{
    "manifest_version": 2,

    "name": "Comic Sans your life",
    "description": "Hail to Comic Sans. ( ͡° ͜ʖ ͡°)",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content_script.js"]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
       "tabs"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_security_policy": "script-src 'self' ; object-src 'self'"
}
